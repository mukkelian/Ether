model = xyz             ! (Ising/XYZ) Ising/XYZ model
mcs = 6000 4000         ! MC steps, Equilibration steps
temp = 80 5 5           ! Temp(K) ==> final, initial, interval
spin = 1                ! Moment list (A = 1) in Bohr magneton
species = Fe             ! Included species symbols
sc = 3 3 3           ! Super Cell size
bc = o o o              ! Boundary CLOSED/OPEN (c/o)
repeat = 20             ! For repeating the MC simulations
angle = .F. 10          ! Logic, least phi angle to run
coa = 20                ! Calculate observables at each MCS
zeeman = .T. 0 0 50      ! Zeeman logic, Mx, My, Mz
g_factor = 2            ! g_factor
stg = .F.		! For staggered  magnetization 
sia = .F.               ! SIA logic
para = .F. 1            ! Parameter logic, value (meV)
ovrr = .T. 0.40 12      ! Over-relaxed (OVRR) logic, ovrr steps, start after MC interval
seed = 1992             ! Seed for random number generation
